---
import { storyblokEditable } from '@storyblok/astro'

import Feature from './Feature.astro'

const { blok } = Astro.props
---

<section id={blok.id} class="features-block" style={`--image-url:url(${blok.image.filename})`} {...storyblokEditable(blok)}>
    <h2>{blok.title}</h2>
    <ul class="features-container">
        {blok.features.map((feature) => (
            <Feature blok={feature} />
        ))}
    </ul>
    {blok.arrow && (
        <img class="arrow" src={blok.arrow.filename} alt="">
    )}
</section>

<style lang="scss">

    section {
        background-image: var(--image-url);
        background-size: cover;
        padding: 130px 90px;

        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5.6rem;

        color: $secondary-text;
        text-align: center;

        @include media("<desktop") {
            padding: 90px 10vw;
            background-position: center;
        }
    }

    ul {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5.6rem;
    }

    h2 {
        font-family: $title;
        font-size: 3rem;
        text-shadow: 2px 2px 10px rgba(0,0,0,.3);
        font-weight: 400;

        @include media("<desktop") {
            font-size: 2.75rem;
        }
    }

    @include media("<desktop") {
            .arrow {
                width: 25%;
            }
        }



</style>